<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id='payment_acquirer_method_view_form' model='ir.ui.view'>
        <field name="name">payment.acquirer.method.view.form</field>
        <field name="model">payment.acquirer.method</field>
        <field name="arch" type="xml">
            <form string="Payment acquirer method">
                <sheet>
                    <!-- Header smart buttons -->
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <field name="image_small" widget="image" class="oe_avatar" options="{'preview_image': 'image_small', 'size': [45, 45]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group name="main_info" string="Main info">
                        <field name="sequence"/>
                        <field name="acquirer_id"/>
                        <field name="acquirer_reference"/>
                    </group>
                    <group name="currencies" string="Currencies">
                        <field name="currency_ids" nolabel="1">
                            <tree>
                                <field name="name"/>
                                <field name="symbol"/>
                                <field name="rate"/>
                            </tree>
                        </field>
                    </group>
                    <group name="countries" string="Countries">
                        <field name="country_ids" nolabel="1">
                            <tree>
                                <field name="name"/>
                                <field name="code"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id='payment_acquirer_method_view_tree' model='ir.ui.view'>
        <field name="name">payment.acquirer.method.tree</field>
        <field name="model">payment.acquirer.method</field>
        <field name="arch" type="xml">
            <tree string="Payment acquirer methods">
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="payment_acquirer_method_view_search" model="ir.ui.view">
        <field name="name">payment.acquirer.method.search</field>
        <field name="model">payment.acquirer.method</field>
        <field name="arch" type="xml">
            <search string="Payment acquirer methods">
                <field name="name"/>
                <group expand="0" string="Group By">
                    <filter string="Active" name="active" context="{'group_by':'active'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_payment_acquirer_methods" model="ir.actions.act_window">
        <field name="name">Payment acquirer methods</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">payment.acquirer.method</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'active_test': False}</field>
        <field name="search_view_id" ref="payment_acquirer_method_view_search"/>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a payment acquirer method.
            </p>
        </field>
    </record>

    <menuitem id="payment_acquirer_method"
              name="Payment acquirer methods"
              action="action_payment_acquirer_methods"
              parent='website_sale.menu_ecommerce_settings'
              groups="base.group_no_one"
              sequence="99"/>

</odoo>